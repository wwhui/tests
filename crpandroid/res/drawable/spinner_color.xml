<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!-- 定义当button 处于pressed 状态时的形态。-->
        <shape>
            <gradient android:startColor="#F7A04A" 
                android:centerColor="#F7A04A"
                android:endColor="#F7A04A"
                />
            <stroke android:width="1px" android:color="#F7A04A" />
            <corners android:radius="5dp" />
            <padding android:left="8dp" android:top="8dp"
                android:bottom="8dp" android:right="8dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <!-- 定义当button 处于未获得focus时的形态。-->
        <shape>
            <gradient android:startColor="#B6CEE9" 
                android:centerColor="#B6CEE9"
                android:endColor="#B6CEE9"
                />
            <stroke android:width="1px" android:color="#B6CEE9" />
            <corners android:radius="5dp" />
            <padding android:left="2dp" android:top="2dp"
                android:bottom="2dp" android:right="2dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <!-- 定义当button获得focus时的形态-->
        <shape>
            <gradient android:startColor="#eac100" />
            <stroke android:width="1px" android:color="#333333" />
            <corners android:radius="8dp" />
            <padding android:left="8dp" android:top="8dp"
                android:bottom="8dp" android:right="8dp" />
        </shape>
    </item>
</selector>
