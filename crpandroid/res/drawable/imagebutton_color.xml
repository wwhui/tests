<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <!-- 定义当button 处于pressed 状态时的形态。-->
        <shape>
            <gradient android:startColor="#F7A04A" 
                android:centerColor="#F7A04A"
                android:endColor="#F7A04A"
                />
            <stroke android:width="1px" android:color="#F7A04A" />
            <corners android:radius="5dp" />
            <padding android:left="7dp" android:top="7dp"
                android:bottom="7dp" android:right="7dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <!-- 定义当button 处于未获得focus时的形态。-->
        <shape>
            <gradient android:startColor="#B4CDE6" 
                android:centerColor="#B4CDE6"
                android:endColor="#B4CDE6"
                />
            <stroke android:width="1px" android:color="#B4CDE6" />
            <corners android:radius="5dp" />
            <padding android:left="7dp" android:top="7dp"
                android:bottom="7dp" android:right="7dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <!-- 定义当button获得focus时的形态-->
        <shape>
            <gradient android:startColor="#eac100" />
            <stroke android:width="1px" android:color="#333333" />
            <corners android:radius="8dp" />
            <padding android:left="7dp" android:top="7dp"
                android:bottom="7dp" android:right="7dp" />
        </shape>
    </item>
</selector>
