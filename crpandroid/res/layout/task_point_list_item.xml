<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/itemBackground"
    >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_selector"
    android:orientation="vertical"
    android:paddingBottom="7dp"
    android:paddingTop="7dp"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    >
	 <TextView
            android:id="@+id/route_date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="处理时间" 
            style="@style/DateStyle"
            />
    <LinearLayout
        android:id="@+id/t1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/route_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="基建处理" 
            android:gravity="right"
            style="@style/flowNameStyle"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/t1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="处理人:" 
            style="@style/itemContentStyle"
            />

        <TextView
            android:id="@+id/cur_role"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="张三"
            android:textColor="@color/message_list_item_title"
            style="@style/itemContentStyle"
            />
    </LinearLayout>
  <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="处理意见:" 
        style="@style/itemContentStyle"
        />

    <TextView
        android:id="@+id/audit_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textColor="@color/message_list_item_content"
        style="@style/itemContentStyle"
        />
  </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right" >
          <Button
                android:id="@id/btn_redirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_button_color"
                android:text="转发（9999）"
                style="@style/itemCommentStyle"
                />
        
        <Button
            android:id="@id/btn_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_button_color"
            android:layout_marginLeft="10dp"
            android:text="评论123123"
            style="@style/itemCommentStyle"
            />
    </LinearLayout>

</LinearLayout>
</LinearLayout>