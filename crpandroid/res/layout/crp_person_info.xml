<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_background" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:drawableLeft="@drawable/left_btn_back_list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true" 
            android:text="@string/person_detail"
            android:textSize="20sp"
            android:textColor="@color/white"
        	android:textStyle="bold"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	android:background="@color/graySecond"
    	android:layout_margin="10dip"
         >	
		<EditText 
		    android:id="@+id/et1_operator_id"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@drawable/edittext_content_color"
		    android:hint="用户"
		    />
		<EditText 
		    android:id="@+id/et2_name"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dip"
		    android:background="@drawable/edittext_content_color"
		    android:hint="姓名"
		    />
		<EditText 
		    android:id="@+id/et3_longphone"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dip"
		    android:background="@drawable/edittext_content_color"
		    android:phoneNumber="true"
		    android:hint="长号"
		    />
		<EditText 
		    android:id="@+id/et4_shortphone"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dip"
		    android:background="@drawable/edittext_content_color"
		    android:hint="短号"
		    />
		<EditText 
		    android:id="@+id/et5_tongyi"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dip"
		    android:background="@drawable/edittext_content_color"
		    android:hint="统一门户账号"
		    />
		<EditText 
		    android:id="@+id/et6_describe"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dip"
		    android:background="@drawable/edittext_content_color"
		    android:hint="描述"
		    />
    </LinearLayout>
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dip"
	    android:orientation="vertical"
	    android:background="@color/graySecond"
	    >
	    <Button 
	       android:id="@+id/btn_save"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:background="@drawable/button_color"
	       android:text="@string/save"
	       android:textColor="@color/white"
	        />
	</LinearLayout>
</LinearLayout>