<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    >
	    <LinearLayout 
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
	        >
		    <ImageView
		        android:id="@id/person_image"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="left"
		        android:src="@drawable/head" />
		
		    <TextView
		        android:id="@id/comment_person"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="测试1测呜测"
		        android:layout_marginLeft="5dip"
		        android:textColor="@color/message_list_item_title"
		        android:textSize="15sp"
		        android:textStyle="bold" />
		     <TextView
		        android:id="@id/comment_create_time"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:gravity="right"
		        android:layout_gravity="right"
		        android:text="2013-08-09"
		        android:textColor="@color/message_list_item_date" 
		        />
		</LinearLayout>
	   
	
	    <TextView
	        android:id="@id/comment_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:focusable="true"
	        android:gravity="center"
	        android:text="我是工单号"
	        android:textColor="@color/message_list_item_content"
	        android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>